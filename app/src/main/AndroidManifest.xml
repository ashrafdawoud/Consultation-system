<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lawerapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LawerApp">
        <activity
            android:name=".View.ReversationActivity"></activity>
        <activity android:name=".View.CategoryDetailsActivity" />
        <activity android:name=".View.SearchResultActivity" />
        <activity android:name=".View.CategoryLawyersActivity" />
        <activity android:name=".View.LawyerProfileActivity" />
        <activity android:name=".View.HomeActivity" />
        <activity android:name=".View.SignUpActivity" />
        <activity android:name=".View.SignInActivity" />
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>