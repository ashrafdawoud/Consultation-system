<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_undraw_judge_katerina_limpitsouni_ny1q"
            android:layout_gravity="center_horizontal"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lawyer Finder"
            android:textSize="40dp"
            android:fontFamily="@font/classic_font"
            android:textAlignment="center"
            android:layout_below="@+id/logo"
            android:layout_marginTop="25dp"
            android:textColor="@color/major"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:indeterminateTint="@color/major"
            android:progressBackgroundTint="@color/major" />
    </LinearLayout>


</RelativeLayout>